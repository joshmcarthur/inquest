<%= form_for [:users, @notification_rule], :html => {:class => 'well form-inline'} do |f| %>
	<%= f.label :class_name %>
	<%= f.select :class_name, class_name_options_for_select, {}, :class => 'span2', :'data-reveal-section' => '_actions' %>

	<% Inquest::Application.config.notifiable_classes.each do |klass| %>
		<%= content_tag :span, :id => "#{klass.name}_actions", :class => 'hide-unless-selected hide' do %>
			<%= f.label :action %>
			<%= f.select :action, klass.notifiable_actions, {}, :disabled => true %>
		<% end %>
	<% end %>

	<%= f.label :reactor_name %>
	<%= f.collection_select :reactor_name, Inquest::Application.config.reactor_classes, :name, :reaction_description %>

	<%= f.submit 'Save Notification', :class => 'btn btn-primary' %>
<% end %>